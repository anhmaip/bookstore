%div
  %h2
    = "#{@category.name}"
  (#{@category.books.count} books)
  %ul= render @books
  = form_tag category_path(@category), :method => :get do
    = label_tag "Books/page"
    = number_field_tag :per_page, params[:per_page].present? ? params[:per_page] : Book.per_page, min: 1
    = submit_tag "Show"
  = will_paginate @books